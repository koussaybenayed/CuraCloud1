<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.SocialMediaIconsController">
   <children>
      <TextField />
      <HBox alignment="CENTER">
      
          <!-- Twitter Button -->
          <Button style="-fx-background-color: transparent;" onAction="#shareOnTwitter">
              <graphic>
                  <FontAwesomeIconView fill="#1DA1F2" glyphName="TWITTER" size="30" /> <!-- Adjust icon color and size -->
              </graphic>
          </Button>
      
          <!-- Facebook Button -->
          <Button style="-fx-background-color: transparent;" onAction="#shareOnFacebook">
              <graphic>
                  <FontAwesomeIconView fill="#3b5998" glyphName="FACEBOOK" size="30" /> <!-- Adjust icon color and size -->
              </graphic>
          </Button>
      
          <!-- Reddit Button -->
          <Button style="-fx-background-color: transparent;" onAction="#shareOnReddit">
              <graphic>
                  <FontAwesomeIconView fill="#FF4500" glyphName="REDDIT_ALIEN" size="30" /> <!-- Adjust icon color and size -->
              </graphic>
          </Button>
      
      </HBox>
   </children>
</VBox>
