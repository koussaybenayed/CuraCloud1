{% extends 'BaseBack.html.twig' %}

{% block title %}New Prescription{% endblock %}

{% block navbar %}
    {% block user_window %}
        {{ parent() }}
    {% endblock %}
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h5>Create New Prescription</h5>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form'}, 'action': path('admin_prescription_new')}) }}


    <!-- Medication Field -->
    <div class="mb-3">
        {{ form_label(form.medication, 'Medication') }}
        {{ form_widget(form.medication, {'attr': {'class': 'form-control', 'placeholder': 'Enter medication'}}) }}
        {{ form_errors(form.medication) }}
    </div>

    <!-- Duration Field -->
    <div class="mb-3">
        {{ form_label(form.duration, 'Prescription') }}
        {{ form_widget(form.duration, {'attr': {'class': 'form-control', 'placeholder': 'Prescription'}}) }}
        {{ form_errors(form.duration) }}
    </div>

    <!-- Creation Date Field -->
    <div class="mb-3">
        {{ form_label(form.creationDate) }}
        {{ form_widget(form.creationDate, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.creationDate) }}
    </div>

    <div style="margin-bottom: 30px;"></div> <!-- Add some space here -->

    <div class="text-center"> <!-- Center the buttons -->
        <button type="submit" class="btn rounded-pill btn-outline-primary">Submit</button>
    </div>
    <div class="text-center mt-3"> <!-- Center the back button -->
        <a href="{{ path('admin_prescription_index') }}" class="btn rounded-pill btn-outline-primary">Back to list</a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}